<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".ResultsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        style="@style/HeaderBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Results"
        app:titleTextColor="@color/colorTextColor"/>

    <TextView
        android:id="@+id/resultsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:text="Results Text"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="20dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_button_layout"
        android:backgroundTint="@color/colorOption4"
        android:text="Try again"
        android:textColor="@color/colorTextColor"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/areaButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_button_layout"
        android:backgroundTint="@color/colorOption3"
        android:text="Area 1"
        android:textColor="@color/colorTextColor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/areaButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="100dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_button_layout"
        android:backgroundTint="@color/colorOption3"
        android:text="Area 2"
        android:textColor="@color/colorTextColor"
        android:textStyle="bold" />

    <Button
        android:id="@+id/finishButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.3"
        android:background="@drawable/rounded_button_layout"
        android:backgroundTint="@color/colorOption4"
        android:text="Finish Session"
        android:textSize="12sp" />
</LinearLayout>